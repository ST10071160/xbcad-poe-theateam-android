<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".LoginActivity">

    <!--    <RelativeLayout-->
    <!--        android:id="@+id/relativeLayout"-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="200dp">-->
    <!--        -->

    <!--    </RelativeLayout>-->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/startUpScreen_VitaflexLogo_imageView"
                    android:layout_width="180sp"
                    android:layout_height="180sp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    app:shapeAppearanceOverlay="@style/roundedImageView"
                    app:srcCompat="@drawable/spark_line_icon_only" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:textColor="@color/app_name_orange"
                    android:textSize="30sp"
                    android:text="Welcome To SparkLine HR"
                    />

            </LinearLayout>



            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:background="@drawable/login_borders"
                android:gravity="center"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/loginScreenHeadingTextView"
                        android:layout_width="150dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:text="LOGIN"
                        android:textSize="30sp" />


                    <TextView
                        android:id="@+id/loginScreenUsernameTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/black"
                        android:text="Employee Number:"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/loginScreenEditEmpNumPlainText"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_margin="10dp"
                        android:singleLine="true"
                        android:background="@drawable/username_border"
                        android:textAlignment="textStart"
                        tools:ignore="SpeakableTextPresentCheck" />


                    <TextView
                        android:id="@+id/loginScreenPasswordTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginHorizontal="20dp"
                        android:textColor="@color/black"
                        android:layout_marginTop="10dp"
                        android:text="Password:"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/loginScreenEditPasswordPlainText"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_margin="10dp"
                        android:singleLine="true"
                        android:background="@drawable/username_border"
                        android:textAlignment="textStart"
                        tools:ignore="SpeakableTextPresentCheck"
                        android:inputType="textPassword"/>

                    <Button
                        android:id="@+id/loginPageLoginBtn"
                        android:layout_width="160dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:layout_gravity="center"
                        android:background="@drawable/username_border"
                        android:stateListAnimator="@android:anim/overshoot_interpolator"
                        android:text="Login"
                        android:textSize="25sp" />
                </LinearLayout>

            </FrameLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>