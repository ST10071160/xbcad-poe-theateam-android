<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8000BFFF"
    tools:context=".ViewPersonalInformationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Header Bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#F5883F"
            android:gravity="center_vertical"
            android:backgroundTint="@color/figma_blue"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/back_btn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/back_arrow"
                tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

            <TextView
                android:id="@+id/about_heading_textView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:layout_marginBottom="10dp"
                android:text="Personal Information"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:ignore="RtlCompat" />
        </LinearLayout>

        <!-- Content Area -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/top_cornered"
            android:padding="16dp">

            <!-- Full Name -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="20dp"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/viewPersonalInfoFirstNameHeadingTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Full Name:"
                    android:textSize="18sp"
                    android:layout_marginBottom="8dp"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/viewPersonalInfoFirstNameTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textAlignment="center" />
            </LinearLayout>

            <View
                android:id="@+id/viewPersonalInfoDivider1"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="#FF7F00" />

            <!-- Job Title -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/viewPersonalInfoJobTitleHeadingTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Job Title:"
                    android:textSize="18sp"
                    android:layout_marginBottom="8dp"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/viewPersonalInfoJobTitleTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textAlignment="center" />
            </LinearLayout>

            <View
                android:id="@+id/viewPersonalInfoDivider3"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="#FF7F00" />

            <!-- Work Email -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="20dp"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/viewPersonalInfoWorkEmailHeadingTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Work Email:"
                    android:textSize="18sp"
                    android:layout_marginBottom="8dp"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/viewPersonalInfoWorkEmailTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textAlignment="center" />
            </LinearLayout>

            <View
                android:id="@+id/viewPersonalInfoDivider4"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="#FF7F00" />

            <!-- Phone Number -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/viewPersonalInfoPhoneNumHeadingTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone Number:"
                    android:textSize="18sp"
                    android:layout_marginBottom="8dp"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/viewPersonalInfoPhoneNumTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textAlignment="center" />
            </LinearLayout>

            <View
                android:id="@+id/viewPersonalInfoDivider5"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="#FF7F00" />
        </LinearLayout>

    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
